@page
@model CategoryRazorMVC.Pages.Category.IndexModel

<link rel="stylesheet" href="~/css/site.css" />

<h1 style="color: #007bff; text-align: center; font-weight: bold;">Categories</h1>

@if (Model.Categories == null || !Model.Categories.Any())
{
    <p>No categories available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
